pipeline {
    agent any
    
    environment
    { 
        cont_name = "app-cont"
        image_name = "app-image"
        version = "v1"
    }
    stages {
       
        stage('Build artifact') {
            steps {
                sh 'mvn clean install'
            }
        }
         stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        
         stage('Build Image') {
            steps {
                sh """ docker rm  ${image_name} || true
                docker build -t ${image_name}:${version} .
                """
            }
         }
             stage(' Run Container') {
            steps {
                sh """ 
                docker stop ${cont_name} || true
                docker rm ${cont_name} || true
                docker run -d -p 5000:8080 --name ${cont_name} ${image_name}:${version}
                """
            }
        }
        }
    
}
